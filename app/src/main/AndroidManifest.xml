<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.gamedots.mindlr.mindlrfrontend">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- android:debuggable="true" -->
    <application
        android:name=".MindlrApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_mask"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MindlrTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="mindlr.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".view.activity.MainActivity"
            android:label="Mindlr"
            android:theme="@style/MindlrTheme" />
        <activity
            android:name=".view.activity.WritePostActivity"
            android:label="@string/title_activity_write_post"
            android:parentActivityName=".view.activity.MainActivity"
            android:theme="@style/MindlrTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.gamedots.mindlr.mindlrfrontend.view.activity.MainActivity" />
        </activity>
        <activity
            android:name=".view.activity.UserPostsActivity"
            android:label="@string/title_activity_user_posts"
            android:parentActivityName=".view.activity.MainActivity"
            android:theme="@style/MindlrTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.gamedots.mindlr.mindlrfrontend.view.activity.MainActivity" />
        </activity>
        <activity
            android:name=".view.activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.PostDetailActivity"
            android:label="@string/title_activity_post_detail"
            android:parentActivityName=".view.activity.UserPostsActivity"
            android:theme="@style/MindlrTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.gamedots.mindlr.mindlrfrontend.view.activity.UserPostsActivity" />
        </activity>
        <activity
            android:name=".view.activity.DraftsActivity"
            android:label="@string/drafts"
            android:parentActivityName=".view.activity.DraftsActivity"
            android:theme="@style/MindlrTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.gamedots.mindlr.mindlrfrontend.view.activity.MainActivity" />
        </activity>
        <activity
            android:name=".view.activity.ProfileActivity"
            android:label="@string/title_activity_profile_actvitiy"
            android:parentActivityName=".view.activity.MainActivity"
            android:theme="@style/MindlrTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.gamedots.mindlr.mindlrfrontend.view.activity.MainActivity" />
        </activity>
    </application>

</manifest>