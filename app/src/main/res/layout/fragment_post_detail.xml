<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.gamedots.mindlr.mindlrfrontend.view.activity.PostDetailActivityFragment"
    tools:showIn="@layout/activity_post_detail">

    <include layout="@layout/card_template"/>

    <TextView
        android:id="@+id/up_percent"

        app:layout_widthPercent="30%"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="1504214151151"
        android:singleLine="true"
        app:layout_marginBottomPercent="30%"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/favorite_number"
        android:layout_toStartOf="@+id/favorite_number" />

    <TextView
        android:id="@+id/down_percent"
        android:text="1239151"
        app:layout_widthPercent="30%"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/up_percent"
        android:layout_toRightOf="@+id/favorite_number"
        android:layout_toEndOf="@+id/favorite_number" />

    <TextView
        android:id="@+id/create_date"
        android:text="hallodate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/favorite_number"
        android:layout_toRightOf="@+id/up_percent"
        android:layout_toEndOf="@+id/up_percent" />

    <TextView
        android:id="@+id/favorite_number"
        android:text="hallofavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/up_percent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <ImageView
        app:layout_widthPercent="30%"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@android:drawable/ic_input_add"
        android:layout_above="@+id/up_percent"
        android:layout_alignRight="@+id/up_percent"
        android:layout_alignEnd="@+id/up_percent" />

    <ImageView
        app:layout_widthPercent="30%"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@android:drawable/ic_delete"
        android:layout_above="@+id/down_percent"
        android:layout_alignLeft="@+id/down_percent"
        android:layout_alignStart="@+id/down_percent"
        android:layout_alignTop="@+id/imageView2" />


</android.support.percent.PercentRelativeLayout>
