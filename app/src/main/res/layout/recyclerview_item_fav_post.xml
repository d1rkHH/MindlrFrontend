<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:contentPadding="8dp"
    app:cardCornerRadius="0dp"
    android:layout_margin="2dp"
    app:cardPreventCornerOverlap="false"
    tools:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/post_preview_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="hallo this is a previo of the main text really big thig 214 dad etwzh wg adafagha"/>

        <ImageView
            android:id="@+id/post_preview_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

        <!--TODO: video preview thumbnail or only link-->

        <TextView
            android:id="@+id/post_preview_liked_date"
            android:layout_width="match_parent"
            android:paddingTop="8dp"
            tools:text="Liked 2 Days ago"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.v7.widget.CardView>