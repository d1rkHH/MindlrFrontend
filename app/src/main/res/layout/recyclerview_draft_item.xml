<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:paddingLeft="16dp"
              android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="76dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/drafts_recyclerview_textview"
            android:layout_width="0dp"
            android:textColor="#727272"
            android:textSize="16sp"
            tools:text="My super awesome long text over 4 lines,My super awesome long text over 4 lines,My super awesome long text over 4 lines"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_weight="8"
            android:maxLines="2"/>

        <ImageView
            android:id="@+id/drafts_recyclerview_imageview"
            android:layout_width="0dp"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:adjustViewBounds="true"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:paddingTop="4dp"/>

</LinearLayout>