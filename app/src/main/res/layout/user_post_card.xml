<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="8dp">

    <android.support.v7.widget.GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:orientation="horizontal"
        app:columnCount="1">

        <TextView
            android:id="@+id/post_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="hallo"/>

        <ImageView
            android:id="@+id/up_vote_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_upvote_arrow_24dp"/>

        <TextView
            android:id="@+id/upvote_percent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:text="69%"/>

        <ImageButton
            android:id="@+id/delete_popup_button"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="showPopup"
            app:srcCompat="@drawable/ic_overflow_button_24dp"/>


        <TextView
            android:id="@+id/post_preview_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:text="hallo this is a previo of the main text really big thig 214 dad etwzh wg adafagha"/>


        <ImageView
            android:id="@+id/down_vote_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_downvote_arrow_24dp"/>

        <TextView
            android:id="@+id/down_vote_percent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:text="69%"
            />

        <TextView
            android:id="@+id/post_create_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:text="20.06.2015"/>

    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.CardView>