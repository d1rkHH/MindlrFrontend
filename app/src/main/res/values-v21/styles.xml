<resources>
    <style name="MindlrTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimaryInverse">@color/gray_light</item>
        <item name="android:navigationBarColor">@android:color/primary_text_dark</item>
        <item name="android:textColorPrimary">@color/gray_dark</item>
    </style>

    <style name="MindlrTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>
</resources>
